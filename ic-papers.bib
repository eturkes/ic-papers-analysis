@article{fischerPreventionAgeassociatedNeuronal2020,
  title = {Prevention of Age-Associated Neuronal Hyperexcitability with Improved Learning and Attention upon Knockout or Antagonism of {{LPAR2}}},
  author = {Fischer, Caroline and Endle, Heiko and Schumann, Lana and {Wilken-Schmitz}, Annett and Kaiser, Julia and Gerber, Susanne and Vogelaar, Christina F. and Schmidt, Mirko H. H. and Nitsch, Robert and Snodgrass, Isabel and Thomas, Dominique and Vogt, Johannes and Tegeder, Irmgard},
  year = {2020},
