@article{yangNeuroinflammationmediatedMitochondrialDysregulation2022,
  title = {Neuroinflammation-Mediated Mitochondrial Dysregulation Involved in Postoperative Cognitive Dysfunction},
  author = {Yang, Yan and Liu, Yue and Zhu, Jixiang and Song, Shiyu and Huang, Yulin and Zhang, Wei and Sun, Yu'e and Hao, Jing and Yang, Xuli and Gao, Qian and Ma, Zhengliang and Zhang, Juan and Gu, Xiaoping},
