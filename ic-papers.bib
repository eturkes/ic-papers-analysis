}

@article{chenWideSensoryFilters2019,
  title = {Wide Sensory Filters Underlie Performance in Memory-Based Discrimination and Generalization},
  author = {Chen, Chi and {Krueger-Burg}, Dilja and {de Hoz}, Livia},
  editor = {Nityananda, Vivek},
