@article{sunAntidepressantTreatmentAssociated2021,
  title = {Antidepressant Treatment Is Associated with Epigenetic Alterations of {{Homer1}} Promoter in a Mouse Model of Chronic Depression},
  author = {Sun, Lu and {Verkaik-Schakel}, Rikst-Nynke and Biber, Knut and Pl{\"o}sch, Torsten and Serchov, Tsvetan},
