@article{goncerzewiczBrainSizeGut2022,
  title = {Brain Size, Gut Size and Cognitive Abilities: The Energy Trade-Offs Tested in Artificial Selection Experiment},
  shorttitle = {Brain Size, Gut Size and Cognitive Abilities},
  author = {Goncerzewicz, Anna and G{\'o}rkiewicz, Tomasz and Dzik, Jakub M. and {J{\k{e}}drzejewska-Szmek}, Joanna and Knapska, Ewelina and Konarzewski, Marek},
  year = {2022},
