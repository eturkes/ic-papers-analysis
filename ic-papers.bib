@article{welzBMAL1DrivenTissueClocks2019,
  title = {{{BMAL1-Driven Tissue Clocks Respond Independently}} to {{Light}} to {{Maintain Homeostasis}}},
  author = {Welz, Patrick-Simon and Zinna, Valentina M. and Symeonidi, Aikaterini and Koronowski, Kevin B. and Kinouchi, Kenichiro and Smith, Jacob G. and Guill{\'e}n, In{\'e}s Mar{\'i}n and Castellanos, Andr{\'e}s and Furrow, Stephen and Arag{\'o}n, Ferr{\'a}n and Crainiciuc, Georgiana and Prats, Neus and Caballero, Juan Mart{\'i}n and Hidalgo, Andr{\'e}s and {Sassone-Corsi}, Paolo and Benitah, Salvador Aznar},
