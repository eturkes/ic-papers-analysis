@article{piechotaCommonTranscriptionalEffects2012,
  title = {Common Transcriptional Effects in the Mouse Striatum Following Chronic Treatment with Heroin and Methamphetamine},
  author = {Piechota, M. and Korostynski, M. and Sikora, M. and Golda, S. and Dzbek, J. and Przewlocki, R.},
