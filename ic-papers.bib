@article{arinradNMDAR1AutoantibodiesAmplify2021,
  title = {{{NMDAR1}} Autoantibodies Amplify Behavioral Phenotypes of Genetic White Matter Inflammation: A Mild Encephalitis Model with Neuropsychiatric Relevance},
