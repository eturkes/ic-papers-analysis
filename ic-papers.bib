@article{berrySustainedHippocampalNeurogenesis2012,
  title = {Sustained Hippocampal Neurogenesis in Females Is Amplified in {{P66Shc}}-/- Mice: {{An}} Animal Model of Healthy Aging},
  shorttitle = {Sustained Hippocampal Neurogenesis in Females Is Amplified in {{P66}} {{{\textsuperscript{Shc}}}}{\textsuperscript{-/-}} Mice},
  author = {Berry, Alessandra and Amrein, Irmgard and N{\"o}tzli, Sarah and Lazic, Stan E. and Bellisario, Veronica and Giorgio, Marco and Pelicci, Pier Giuseppe and Alleva, Enrico and Lipp, Hans-Peter and Cirulli, Francesca},
  year = {2012},
  month = dec,
  journal = {Hippocampus},
  volume = {22},
