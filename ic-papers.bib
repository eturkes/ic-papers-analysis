@article{mohammadiA9nAChRKnockoutMice2017,
  title = {{$A$}9-{{nAChR}} Knockout Mice Exhibit Dysregulation of Stress Responses, Affect and Reward-Related Behaviour},
  author = {Mohammadi, Sarasa A. and Burton, Thomas J. and Christie, MacDonald J.},
  year = {2017},
