@article{hardaLossMuDelta2020,
  title = {Loss of Mu and Delta Opioid Receptors on Neurons Expressing Dopamine Receptor {{D1}} Has No Effect on Reward Sensitivity},
  author = {Harda, Zofia and Spyrka, Jadwiga and Jastrz{\k{e}}bska, Kamila and Szumiec, {\L}ukasz and Bryksa, Anna and Klimczak, Marta and Polaszek, Maria and Go{\l}da, S{\l}awomir and Zajdel, Joanna and Misio{\l}ek, Klaudia and B{\l}asiak, Anna and Rodriguez Parkitna, Jan},
