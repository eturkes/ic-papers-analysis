@article{nowakSocialModulationExtinction2013,
  title = {Social Modulation in Extinction of Aversive Memories},
  author = {Nowak, Aleksandra and Werka, Tomasz and Knapska, Ewelina},
  year = {2013},
  month = feb,
  volume = {238},
  pages = {200--205},
  issn = {01664328},
