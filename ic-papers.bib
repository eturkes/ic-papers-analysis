@article{heinlaBehaviouralCharacterizationC57BL2018,
  title = {Behavioural Characterization of {{C57BL}}/{{6N}} and {{BALB}}/c Female Mice in Social Home Cage \textendash{} {{Effect}} of Mixed Housing in Complex Environment},
  author = {Heinla, Indrek and {\AA}hlgren, Johanna and Vasar, Eero and Voikar, Vootele},
