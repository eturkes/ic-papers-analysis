@article{kempermannIndividualityParadigmAutomated2022,
  title = {The Individuality Paradigm: {{Automated}} Longitudinal Activity Tracking of Large Cohorts of Genetically Identical Mice in an Enriched Environment},
  shorttitle = {The Individuality Paradigm},
  author = {Kempermann, Gerd and Lopes, Jadna Bogado and Zocher, Sara and Schilling, Susan and Ehret, Fanny and Garthe, Alexander and Karasinsky, Anne and Brandmaier, Andreas M. and Lindenberger, Ulman and Winter, York and Overall, Rupert W.},
