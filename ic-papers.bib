@article{ruudFatMassObesityAssociated2019,
  title = {The {{Fat Mass}} and {{Obesity-Associated Protein}} ({{FTO}}) {{Regulates Locomotor Responses}} to {{Novelty}} via {{D2R Medium Spiny Neurons}}},
